/ app-footer
%footer.app-footer.public
  .footer-main
    .container
      .col-sm-4.col-md-2
        %dl
          %dt The Service
          %dd
            %a{:href => "#"} Home
          %dd
            %a{:href => pricing_path } Pricing
          %dd
            %a{:href => "#"} Case Studies
          %dd
            %a{:href => "#"} API
      .col-sm-4.col-md-2
        %dl
          %dt The Company
          %dd
            %a{:href => "#"} Vision
          %dd
            %a{:href => team_path} Team
          %dd
            %a{:href => contact_path} Contact
      .col-sm-4.col-md-2
        %dl
          %dt Select language
          %dd
            = link_to t('menu.languages.en'), url_for(locale: 'en'), class: I18n.locale == :en ? "selected" : ""
          %dd
            = link_to t('menu.languages.nb'), url_for(locale: 'nb'),  class: I18n.locale == :nb ? "selected" : ""

      .col-sm-12.col-md-4.social
        %h5 Think people should hear about commodity.live?
        %ul.list-inline
          %li.twitter
            %a{:href => "#"}
              %i.fa.fa-twitter
          %li.google-plus
            %a{:href => "#"}
              %i.fa.fa-google-plus
          %li.facebook
            %a{:href => "#"}
              %i.fa.fa-facebook
          %li.linkedin
            %a{:href => "#"}
              %i.fa.fa-linkedin
        .newsletter
          %h5 Get the latest updates straight to your inbox
          = form_tag subscribe_path, id: "subscribe-form" do
            .form-group
              .input-group
                = email_field_tag :subscribe_email, nil, class: "form-control", placeholder: "Your Email", data: { validation: "email required"}
                .span.input-group-btn
                  = button_tag :subscribe, type: "submit", class: "btn btn-secondary" do
                    Subscribe

  .footer-meta.text-center
    .container
      %ul.footer-menu
        %li.hidden-xs
          %a{:href => "#"} Dispute
        %li
        %li
          %a{:href => "#"} Terms &amp; Conditions
        %li
          %a{:href => "#"} Privacy Policy
        %li
        %li
          %a{:href => "#"} Copyright Policy
