= form_for [@app,@classification,@level], html: { class: "form-horizontal" } do |f|
  = errors_for @level

  .form-group
    = f.label :name, class: "col-sm-4 control-label"
    .col-sm-6
      = f.text_field :name, class: "form-control"
  .form-group
    = f.label :position, class: "col-sm-4 control-label"
    .col-sm-6
      = f.number_field :position, step: 0.1, class: "form-control"
  .form-group
    = f.label :parent_level, class: "col-sm-4 control-label"
    .col-sm-6
      = f.select :parent_id, levels_for(@classification), { prompt: "None" }, class: "form-control"

  .checkbox.col-sm-offset-4.m-b-lg{ style: "padding-left: 28px;"}
    = f.check_box :needs_moderation
    = f.label :needs_moderation

  .row
    .col-sm-8.col-sm-offset-4
      = f.submit class: "btn btn-primary"
      = link_to "Cancel", :back, class: "btn btn-default btn-md m-l-sm"