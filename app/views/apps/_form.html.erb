<%= form_for @app do |f| %>
    <%= errors_for @app %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>

    <%= f.submit class: "btn btn-primary" %>
<% end %>