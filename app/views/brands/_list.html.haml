%tr.segment.segment-edit
  %td= image_tag brand.logo, width: 50, height: 50
  %td= brand.name
  %td InterCert
  %td September 2018
  %td= truncate brand.description, length: 100
  %td.segment-actions
    %span.hidden 2
    = link_to edit_brand_path(brand), class: "btn-edit" do
      %i.fa.fa-pencil
      Edit
    .segment-state.dropdown
      = render 'shared/pubmode', mode: "Public"
