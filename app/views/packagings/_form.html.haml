= form_for [@app,@commodity_reference,@packaging], html: { class: "form-horizontal" } do |f|
  .form-group
    = f.label :name, class: "col-sm-4 control-label"
    .col-sm-6
      = f.text_field :name, class: "form-control"
      = errors_for_field(@packaging,:name)
  .form-group
    = f.label :description, class: "col-sm-4 control-label"
    .col-sm-6
      = f.text_area :description, class: "form-control autoresize"
      = errors_for_field(@packaging,:description)
  .form-group
    = f.label :quantity, class: "col-sm-4 control-label"
    .col-sm-6
      .row
        .col-sm-6
          = f.number_field :quantity, class: "form-control", step: 0.01
          = errors_for_field(@packaging,:quantity)
        .col-sm-6
          = f.text_field :uom, class: "form-control", placeholder: "Unit of Measure"
          = errors_for_field(@packaging,:uom)
  .form-group
    = f.label :publishing, class: "col-sm-4 control-label"
    .col-sm-6
      = f.select :visibility, options_for_visibility(@packaging), {}, class: "selectpicker show-tick", data: { width: "fit", header: "Publishing of the data"}
  .row
    .col-sm-8.col-sm-offset-4
      = f.submit class: "btn btn-primary"
      = link_to "Cancel", :back, class: "btn btn-default btn-md m-l-sm"
