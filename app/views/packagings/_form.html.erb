<%= form_for [@app,@commodity_reference,@packaging] do |f| %>
    <%= errors_for @packaging %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: "form-control", step: 0.01 %>
    </div>
    <div class="form-group">
      <%= f.label :unit_of_measure %>
      <%= f.text_field :uom, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
<% end %>