<%= form_for [@app,@commodity] do |f| %>
    <%= errors_for @commodity %>
    <div class="form-group">
      <%= f.label :short_description %>
      <%= f.text_field :short_description, rows: 2, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :long_description %>
      <%= f.text_area :long_description, rows: 5, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :measured_in %>
      <%= f.text_field :measured_in, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :generic %>
      <%= f.check_box :generic, {}, "true", "false" %>
    </div>
    <div class="form-group">
      <%= f.label :brand %>
      <%= f.select :brand_id, Brand.all.map{|b| [b.name, b.id]}, { prompt: "Select Brand" },  class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
<% end %>