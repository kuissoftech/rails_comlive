%tr.segment.segment-edit
  %td
    // move to presenter?
    - if commodity.images.any?
      - image = commodity.images.first
      = image_tag "https://process.filestackapi.com/resize=width:50,height:35,fit:crop/#{image.handle}"

  %td= link_to commodity.name, commodity
  %td= commodity.short_description
  %td.segment-actions
    %span.hidden 2
    = link_to edit_commodity_path(commodity), class: "btn-edit" do
      %i.fa.fa-pencil
      Edit
    .segment-state.dropdown
      = render 'shared/pubmode', mode: "Official"
