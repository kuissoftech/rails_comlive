<%= form_for [@app,@commodity,@state], html: { id: "commodity-state"} do |f| %>
    <%= errors_for @state %>
    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, options_for_states, {},  class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :info %>
      <%= f.text_area :info, class: "form-control", rows: 3 %>
    </div>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
<% end %>