<%= form_for [@app,@commodity, @measurement] do |f| %>
    <%= errors_for @measurement %>
    <div class="form-group">
      <%= f.label :property %><br>
      <%= f.select :property, grouped_options_for_select(options_for_property(@app), @measurement.property), { prompt: "Select Property" }, class: "form-control", data: { url: uoms_path } %>
    </div>
    <div class="form-group">
      <%= f.label :value %><br>
      <%= f.text_field :value , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :uom %><br>
      <%= f.select :uom, options_for_select(uoms_for_property(@measurement.property), @measurement.uom), {},  class: "form-control"  %>
    </div>

    <%= f.submit class: "btn btn-primary" %>

<% end %>